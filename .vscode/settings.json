{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    // For TSLint
    "source.fixAll.tslint": true,
    // For Stylelint
    "source.fixAll.stylelint": true
  },
  "eslint.validate": ["javascript", "typescript"],
  "files.watcherExclude": {
    "**/target": true
  },
  "editor.formatOnSave": true,
}
